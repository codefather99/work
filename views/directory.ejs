<%- include('partials/header') %>
<body class="dict-body">

<h1 class="dict-main-title">Medix Directory</h1>
<!-- <div>
    <form action="/:directoryfolder" method="get">
        <input type="text" placeholder="New Folder">
    <button onclick="this.form.submit()" name="newDirectoryFolder">+</button>
</form>
